<Page
    x:Class="UniTransnap.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniTransnap"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel>
    <TextBox x:Name="InputTextBox" Header="翻訳元文章・単語" Grid.Row="1" Margin="10"></TextBox>

    <!--<TextBox x:Name="OutputTextBox" Header="翻訳結果・単語" Grid.Row="2" Margin="10" DataContext="{Binding}"></TextBox>-->
    <TextBlock x:Name="OutputTextBlock" Text="test" Grid.Row="2" FontSize="24" ></TextBlock>

      <Button x:Name="TranslateButton" Grid.Row="3" Content="翻訳" Margin="0,7,0,6" Tapped="TranslateButton_Tapped"></Button>
      <Button x:Name="getTokenButton" Grid.Row="3" Content="Token" Margin="0,7,0,6" Tapped="getTokenButton_Tapped" ></Button>

    </StackPanel>
  </Grid>
</Page>
